@model WebNgheNhac.Models.Reg
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="action">Đăng ký thành viên mới</h2>
<div class="container noidung">
    @using (Html.BeginForm("DangKy", "DangNhap", FormMethod.Post, htmlAttributes: new { @name = "formdangky", onsubmit = "return kiemtrajoin()" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.username, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { @class = "username" })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.pass1, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.pass1, new { @name = "pass" })
                    @Html.ValidationMessageFor(model => model.pass1, "Vui lòng nhập password", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.pass2, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.pass2, new { @name = "re-pass" })
                    @Html.ValidationMessageFor(model => model.pass2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.hoten, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.hoten, new { @name = "hoten" })
                    @Html.ValidationMessageFor(model => model.hoten, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng ký" class="btn btn-danger" />
                    <input type="reset" value="Nhập lại" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <hr />

</div>

