@model WebNgheNhac.Models.USER
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="action">Đăng nhập</h2>
<div class="container noidung">
    @using (Html.BeginForm("Index", "Dangnhap", FormMethod.Post, htmlAttributes: new { @name = "formdangnhap", onsubmit = "return kiemtralogin()" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.USERNAME, "Tên đăng nhập", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.USERNAME, new { @name = "username" })
                    @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PASS, "Mật khẩu", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.PASS, new { @name = "pass" })
                    @Html.ValidationMessageFor(model => model.PASS, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng nhập" class="btn btn-danger" />
                    <input type="reset" value="Nhập lại" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <hr />
</div>

