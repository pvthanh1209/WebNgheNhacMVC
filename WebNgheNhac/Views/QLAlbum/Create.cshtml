@model WebNgheNhac.Models.ALBUM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="action">Thêm Album</h2>
<div class="container noidung">
    @using (Html.BeginForm("Create", "QLAlbum", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TEN_AB, "Tên album", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TEN_AB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TEN_AB, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ANH_AB, "Ảnh bìa", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="fileUpload" name="fileUpload" />
                    @Html.ValidationMessageFor(model => model.ANH_AB, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NGAYPHATHANH, "Ngày phát hành", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NGAYPHATHANH, new { @class = "form-control", @type = "date" })
                    @*@Html.TextBoxFor(model => model.NGAYPHATHANH, new { htmlAttributes = new { @class = "form-control", @type = "date" } })*@
                    @Html.ValidationMessageFor(model => model.NGAYPHATHANH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.THONGTIN, "Thông tin album", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.THONGTIN, htmlAttributes: new { @class = "thongtin-area" })
                    @Html.ValidationMessageFor(model => model.THONGTIN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MA_TL, "Thể loại", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MA_TL", null, htmlAttributes: new { @class = "drop" })
                    @Html.ValidationMessageFor(model => model.MA_TL, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MA_CS, "Ca sĩ thể hiện", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MA_CS", null, htmlAttributes: new { @class = "drop" })
                    @Html.ValidationMessageFor(model => model.MA_CS, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
    <hr />
    <a href="@Url.Action("Index")" class="opt-btn"><span class="glyphicon glyphicon-arrow-left"></span> Quay lại</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

